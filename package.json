{
  "name": "matrimony-server",
  "version": "1.0.0",
  "description": "Node js bakend server for a matrimony application",
  "main": "index.js",
  "engines": {
    "node": "16.x",
    "npm": "8.x"
  },
  "scripts": {
    "start": "node index.js",
    "server": "nodemon index.js",
    "client": "npm run start --prefix client2",
    "dev": "concurrently \"npm run server\" \"npm run client\" ",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client2 && npm run build --prefix client1"
  },
  "author": "Agasthian",
  "license": "ISC",
  "dependencies": {
    "concurrently": "^7.1.0",
    "cookie-session": "^2.0.0",
    "express": "^4.17.3",
    "mongoose": "^6.2.9",
    "passport": "^0.5.2",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth20": "^2.0.0",
    "stripe": "^9.11.0"
  },
  "devDependencies": {
    "nodemon": "^2.0.15"
  }
}
